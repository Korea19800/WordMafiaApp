<?xml version="1.0" encoding="utf-8"?>
<com.ulimbridge.wordmafia.CategoryCheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/CheckableLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:weightSum="6"
    >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="4"
        android:gravity="center"
        android:text="TEXT"
        android:textColor="#000000"
        android:fontFamily="@font/explicate_dohyeon"
        android:textStyle="bold"
        android:textSize="24sp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <CheckBox
        android:id="@+id/checkBoxMafia"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        android:clickable="false"
        android:focusable="false" />
</com.ulimbridge.wordmafia.CategoryCheckableRelativeLayout>